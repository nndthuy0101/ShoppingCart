<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Icon trái -->
            <ImageView
                android:id="@+id/imageSideBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="16dp"
                app:srcCompat="@mipmap/ic_left_side_bar" />

            <!-- Giữa: logo nằm chính giữa bằng layout_weight -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_logo_small" />
            </LinearLayout>

            <!-- Icon phải -->
            <ImageView
                android:id="@+id/imageBell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="16dp"
                app:srcCompat="@mipmap/ic_bell" />
        </LinearLayout>


        <!-- Title -->
        <TextView
            android:id="@+id/tvBranchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rebound_branches"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Branch buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnHanoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hanoi"
                app:cornerRadius="5dp"
                android:backgroundTint="#F2F0D4"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnHCM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ho_chi_minh"
                android:layout_marginStart="8dp"
                app:strokeColor="#AB9E67"
                app:strokeWidth="0.5dp"
                app:cornerRadius="5dp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Branch images -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/branch1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/branch2" />
        </LinearLayout>

        <!-- Branch info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/branch1_title"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#AB9E67" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/ic_address_schedule"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/tvAddress1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/branch1_address"
                        android:textSize="10sp"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/ic_clock"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/tvTime1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/branch_hours"
                        android:textSize="10sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/branch2_title"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#AB9E67" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/ic_address_schedule"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/tvAddress2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/branch1_address"
                        android:textSize="10sp"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/ic_clock"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/tvTime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/branch_hours"
                        android:textSize="10sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Services -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_service"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColor="#000000" />

        <!-- One service item -->
        <!-- Service 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service1_title"
                    android:textSize="12sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service1_description"
                    android:textSize="12sp"
                    android:textColor="#555555" />
            </LinearLayout>
            <!-- Vertical Divider -->
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service1_price"
                    android:textStyle="bold"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service1_duration"
                    android:textSize="10sp" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="12sp"
                app:strokeWidth="0.5dp"
                app:cornerRadius="0dp"
                android:padding="1dp"
                android:backgroundTint="#FFFFFF"
                android:text="@string/selected"
                app:strokeColor="#CCCCCC"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Horizontal Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />

        <!-- Service 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service2_title"
                    android:textSize="12sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service2_description"
                    android:textSize="12sp"
                    android:textColor="#555555" />
            </LinearLayout>

            <!-- Vertical Divider -->
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service2_price"
                    android:textStyle="bold"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service2_duration"
                    android:textSize="10sp" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="12sp"
                app:strokeWidth="0.5dp"
                app:cornerRadius="0dp"
                android:padding="1dp"
                android:backgroundTint="#FFFFFF"
                android:text="@string/selected"
                app:strokeColor="#CCCCCC"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Horizontal Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />

        <!-- Service 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"

            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service3_title"
                    android:textSize="12sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service3_description"
                    android:textSize="12sp"
                    android:textColor="#555555" />
            </LinearLayout>

            <!-- Vertical Divider -->
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service3_price"
                    android:textStyle="bold"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service3_duration"
                    android:textSize="10sp" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="12sp"
                app:strokeWidth="0.5dp"
                app:cornerRadius="0dp"
                android:padding="1dp"
                android:backgroundTint="#FFFFFF"
                android:text="@string/selected"
                app:strokeColor="#CCCCCC"
                android:textColor="#000000" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />

        <!-- Service 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service4_title"
                    android:textSize="12sp"
                    android:textColor="#000000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service4_description"
                    android:textSize="12sp"
                    android:textColor="#555555" />
            </LinearLayout>

            <!-- Vertical Divider -->
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service4_price"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service4_duration"
                    android:textSize="10sp" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="12sp"
                app:strokeWidth="0.5dp"
                app:cornerRadius="0dp"
                android:padding="1dp"
                android:backgroundTint="#FFFFFF"
                android:text="@string/selected"
                app:strokeColor="#CCCCCC"
                android:textColor="#000000" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />


        <!-- Appointment Time Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_appointment_time"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColor="#000000" />

        <!-- Calendar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:elevation="1dp"
            android:background="@drawable/bg_calendar"
            android:layout_marginBottom="1dp">


            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:calendarViewShown="true"
                android:focusedMonthDateColor="#000000"
                android:selectedWeekBackgroundColor="#AB9E67"
                android:showWeekNumber="false"
                android:unfocusedMonthDateColor="#888888"
                android:weekSeparatorLineColor="#CCCCCC" />
            <!-- Divider line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#CCCCCC"
                android:layout_marginBottom="8dp" />
            <!-- Time selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:elevation="1dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/time_label"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:padding="10dp"
                    android:background="#FAFAFA"
                    android:id="@+id/tvSelectedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_time"
                    android:textSize="17sp"
                    app:cornerRadius="6dp"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>


        <!-- Book Button -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBook"

            android:layout_width="257dp"
            android:layout_height="56dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/book_appointment"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:strokeColor="#AB9E67"
            app:strokeWidth="0.5dp"
            android:layout_gravity="center_horizontal"
            app:cornerRadius="10dp" />

    </LinearLayout>
</ScrollView>
