<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="343dp"
    android:background="@drawable/bg_popup_rounded"
    android:padding="20dp">

    <!-- Close Icon -->
    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@mipmap/ic_close"
        android:contentDescription="@string/close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvSuccessTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reserved_successfully"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#1E1E1E"
        android:textSize="18sp"
        android:letterSpacing="0.2"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/ivClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Check Icon -->
    <ImageView
        android:id="@+id/ivCheck"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_payment_success"
        android:contentDescription="@string/success"
        app:layout_constraintTop_toBottomOf="@id/tvSuccessTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Message -->
    <TextView
        android:id="@+id/tvSuccessMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reservation_updated"
        android:textColor="#1E1E1E"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivCheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Divider Image -->
    <ImageView
        android:id="@+id/ivLinePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@mipmap/line_payment"
        app:layout_constraintTop_toBottomOf="@id/tvSuccessMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Appointment Info -->
    <LinearLayout
        android:id="@+id/layoutAppointmentInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivLinePayment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Appointment ID Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tvAppointmentIdLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/appointment_id_label"
                android:textColor="#888888"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvAppointmentIdValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03"
                android:textColor="#888888"
                android:textSize="15sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Appointment Date Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvAppointmentDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/appointment_date_label"
                android:textColor="#888888"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvAppointmentDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26/07/2025"
                android:textColor="#888888"
                android:textSize="15sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Appointment Time Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvAppointmentTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/appointment_time_label"
                android:textColor="#888888"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvAppointmentTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 AM"
                android:textColor="#888888"
                android:textSize="15sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Remind Me Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRemindMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/remind_me"
        android:textColor="#1E1E1E"
        android:textSize="18sp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="15dp"
        app:strokeColor="#AB9E67"
        app:strokeWidth="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/layoutAppointmentInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
